<div class="container">
  <div class="row justify-content-between">
    <div class="col-3">
      <div class="card shadow-sm p-3">
        <div class="row g-0">
          <div class="d-flex align-items-center justify-content-center p-3">
            <%= gravatar_for @user %>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex align-items-center justify-content-between">
              <p class="m-0"><i class="fa fa-github" aria-hidden="true"></i> GitHub</p>
              <p class="d-block m-0">@<%= @user.name%></p>
            </li>
            <li class="list-group-item d-flex align-items-center justify-content-between">
              <p class="m-0"><i class="fa fa-twitter" aria-hidden="true"></i> Twitter</p>
              <p class="d-block m-0">@<%= @user.name%></p>
            </li>
            <li class="list-group-item d-flex align-items-center justify-content-between border-bottom mb-2">
              <p class="m-0"><i class="fa fa-facebook" aria-hidden="true"></i> Facebook</p>
              <p class="d-block m-0">@<%= @user.name%></p>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-8">
      <table class="table">
        <tbody>
          <tr>
            <th scope="row" class="w-25">氏名</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th scope="row">メール</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th scope="row">電話</th>
            <td>xxx-xxxx-xxxx</td>
          </tr>
          <tr>
            <th scope="row">住所</th>
            <td>〇〇区△△2-1-3</td>
          </tr>
          <tr>
            <th scope="row">趣味</th>
            <td><%= @user.hobby %></td>
          </tr>
          <tr>
            <th scope="row">自己紹介</th>
            <td>
              <%= @user.introduction %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
